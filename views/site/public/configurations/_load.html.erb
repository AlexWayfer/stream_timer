<section class="configuration load">
	<h2><%= t.site.configurations.load.header %></h2>

	<form action="<%= path_to :load %>" method="POST">
		<%= csrf_tag %>

		<fieldset>
			<legend><%= t.label.user_key %></legend>

			<input type="password" name="user_key" size="36" required />
		</fieldset>

		<button type="submit" class="success"><%= t.button.load %></button>
	</form>
</section>
